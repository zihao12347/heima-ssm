<?xml version="1.0" encoding="UTF-8"?>
<!--mybatis的(DTD)文档类型约束，进行相关标签的提示和约束-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.ssm.dao.TravellerDao">
    <select id="findByOid" resultType="traveller">
        select * from Traveller t,order_traveller ot
        where t.id=ot.travellerid and ot.orderid=#{id}
    </select>
</mapper>